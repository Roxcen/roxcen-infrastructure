# Production Environment Variables
environment    = "production"
project_name   = "roxcen-hms"
aws_region     = "ap-south-1"

# Domain Configuration
domain_name = "api.roxcen.com"  # Production API subdomain
create_hosted_zone = false  # Use existing hosted zone for roxcen.com
existing_hosted_zone_id = "Z1234567890ABC"  # Replace with your actual hosted zone ID

# ECS Configuration (Higher specs for production)
ecs_task_cpu       = 1024
ecs_task_memory    = 2048
ecs_desired_count  = 2

# Secrets Configuration
jwt_secret_arn = "arn:aws:secretsmanager:ap-south-1:269010807913:secret:roxcen/production/jwt-secret-XXXXXX"

# Tags
tags = {
  Environment = "production"
  Project     = "roxcen-hms"
  Component   = "webapi"
  Owner       = "roxcen-team"
}
